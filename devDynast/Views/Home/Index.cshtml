@{
    ViewData["Title"] = "Food Website Landing Page";
    Layout = null; 
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        .hero-section {
            background-image: url('/Images/background.jpg'); 
            background-size: cover;
            background-position: center;
            color: white;
            text-align: center;
            padding: 100px 0;
        }
        .hero-section h1 {
            font-size: 4em;
            margin-bottom: 20px;
        }
        .hero-section p {
            font-size: 1.5em;
        }
        .navbar .nav-link.btn {
            background-color: red;
            color: white !important;
        }
    </style>
</head>
<body>

    <!-- Header Section -->
    <header class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="container">
            <a class="navbar-brand" href="#">Big Jim Grills</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item"><a class="nav-link" href="#">Home</a></li>
                    <li class="nav-item"><a class="nav-link btn" href="/Account/Login">Login</a></li>
                    <li class="nav-item"><a class="nav-link btn" href="/User/Register">Register</a></li>
                </ul>
            </div>
        </div>
    </header>

    <!-- Hero Section -->
    <section class="hero-section">
        <div class="container">
            <h1>Welcome to Big Jim Grills</h1>
            <p>Your favorite dishes made fast and fresh.</p>
            <a href="/Account/Login" class="btn btn-primary btn-lg">Login</a>
        </div>
    </section>

    <!-- Features Section -->
    <section class="py-5">
        <div class="container text-center">
            <h2>Why Choose Us?</h2>
            <div class="row mt-4">
                <div class="col-md-4">
                    <h4>Wide Variety</h4>
                    <p>Explore a vast selection of dishes from different cuisines.</p>
                </div>
                <div class="col-md-4">
                    <h4>Fast Execution</h4>
                    <p>Get your food made in no time.</p>
                </div>
                <div class="col-md-4">
                    <h4>Quality Ingredients</h4>
                    <p>We use only the freshest and finest ingredients.</p>
                </div>
            </div>
        </div>
    </section>


    <!-- Footer Section -->
    <footer class="py-4 bg-dark text-white text-center">
        <div class="container">
            <p>&copy; 2024 Big Jim Grills. All rights reserved.</p>
            <div>
                <a href="#" class="text-white me-3">Privacy Policy</a>
                <a href="#" class="text-white">Terms & Conditions</a>
            </div>
        </div>
    </footer>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
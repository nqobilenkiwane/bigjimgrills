
{
    <table class="table">
        <thead>
            <tr>
                <th>Product ID</th>
                <th>Quantity</th>
                <th>Price</th>
                <th>Rate Item</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.ProductId</td>
                    <td>@item.Quantity</td>
                    <td>@item.Price</td>
                    <td>
                        <a asp-action="Create" asp-route-itemId="@item.ProductId" class="btn btn-primary">Rate</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

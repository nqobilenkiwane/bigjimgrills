@model IEnumerable<devDynast.Models.Cart>

@{
    ViewBag.Title = "Order History";
}

<h2>Order History</h2>

<table class="table">
    <thead>
        <tr>
            <th>Item</th>
            <th>Quantity</th>
            <th>Price</th>
            <th>Total</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var order in Model)
        {
            <tr>
                <td>@order.ProductId</td> 
                <td>@order.Quantity</td>
                <td>@order.Price.ToString("C", System.Globalization.CultureInfo.GetCultureInfo("en-ZA"))</td>
                <td>@((order.Price * order.Quantity).ToString("C", System.Globalization.CultureInfo.GetCultureInfo("en-ZA"))) </td>
            </tr>
        }
    </tbody>
</table>

<h3>Total Price: @ViewBag.TotalPrice.ToString("C", System.Globalization.CultureInfo.GetCultureInfo("en-ZA"))</h3>
